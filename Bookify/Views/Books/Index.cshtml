@model IEnumerable<BookForListVM>

@{
    ViewData["Title"] = "Books";
}

<div class="container mt-4">
    <div class="row">
        @foreach(var book in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card book-card mb-4">
                    <a href="/Books/Details/@book.Id">
                        <img src="@book.PictureUrl" class="card-img-top" alt="@book.Title">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text text-muted">@book.Author - @book.Genre</p>
                        <p class="card-description">@book.Description</p>
                        <div class="price-section">
                            <span class="book-price">@book.Price.ToString("C")</span>
                        </div>
                        <form asp-action="AddToBasket" asp-controller="ShoppingCart" method="post">
                            <input type="hidden" name="productId" value="@book.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-primary">Add to Basket</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>